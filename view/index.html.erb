<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<link rel="stylesheet" href="CSS/my-style.css" type="text/css" media="screen, projection" />
<head>
  <title> My favpics </title>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="assets/app.js"></script>
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
  <!-- Form to upload an image or another file -->
  <div id="upload">
    <p class="title"> Uload </p>
    <form id="upload-form" action="/" method="post" enctype="multipart/form-data" style="text-align:center" >
      <input type="file" name="file">
      <input type="submit" value="Upload">
    </form>
  </div>
  <div class="images-container">
    <!-- Form to upload an image or another file -->
    <% if alarm == 1 %>
    <p>You need to specify a file</p>
    <% end %>
    <%= list_images "./public/images" %>
  </div>
  <div class="file-size" id="detail"> </div>
</body>
</html>
